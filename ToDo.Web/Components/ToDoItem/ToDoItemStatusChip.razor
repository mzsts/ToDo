<MudChip Color="GetColorForStatus()" Size="Size">@Status</MudChip>

@code {
    [Parameter]
    public ToDoItemStatus Status { get; set; }

    [Parameter]
    public Size Size { get; set; } = Size.Medium;

    private Color GetColorForStatus()
    {
        return Status switch
        {
            ToDoItemStatus.Assigned => Color.Info,
            ToDoItemStatus.InProgress => Color.Primary,
            ToDoItemStatus.Suspended => Color.Warning,
            ToDoItemStatus.Compleated => Color.Success,
        };
    }
}
